# Description: print the current volume level
#=========================================================================

vol="$(amixer get Master | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/')"
state="$(amixer get Master | tail -n1 | awk '{print $6}')"
if [ "$state" = "[off]" ]; then
	icon="ðŸ”‡"
else
	if [ "$vol" -gt "70" ]; then
		icon="ðŸ”Š"
	elif [ "$vol" -lt "30" ]; then
		icon="ðŸ”ˆ"
	else
		icon="ðŸ”‰"
	fi
fi
printf "%s %s\\n" "$icon" "$vol%"
